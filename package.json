{
  "name": "svg-fill",
  "version": "0.3.6",
  "description": "Fills all shapes of an SVG in single colour",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "clean": "del dist/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "lint": "eslint src --ext .js,.ts"
  },
  "files": [
    "dist",
    "svg-fill-illustration.svg"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/c1rrus/svg-fill.git"
  },
  "keywords": [
    "svg",
    "fill",
    "color",
    "icons",
    "sprite"
  ],
  "author": "James Nash (http://cirrus.twiddles.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/c1rrus/svg-fill/issues"
  },
  "homepage": "https://github.com/c1rrus/svg-fill#readme",
  "dependencies": {
    "@types/cheerio": "^0.22.23",
    "@types/color": "^3.0.0",
    "@types/node": "^10.17.50",
    "@types/through2": "^2.0.34",
    "cheerio": "^1.0.0-rc.5",
    "color": "^3.1.3",
    "through2": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^11.0.0",
    "@cyberfinity/tsconfig-node": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "semantic-release": "^17.3.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
