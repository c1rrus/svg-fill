{
  "name": "svg-fill",
  "version": "0.3.4",
  "description": "Fills all shapes of an SVG in single colour",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "clean": "del dist/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "lint": "eslint src --ext .js,.ts"
  },
  "files": [
    "dist",
    "svg-fill-illustration.svg"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/c1rrus/svg-fill.git"
  },
  "keywords": [
    "svg",
    "fill",
    "color",
    "icons",
    "sprite"
  ],
  "author": "James Nash (http://cirrus.twiddles.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/c1rrus/svg-fill/issues"
  },
  "homepage": "https://github.com/c1rrus/svg-fill#readme",
  "dependencies": {
    "@types/cheerio": "^0.22.17",
    "@types/color": "^3.0.0",
    "@types/node": "^10.17.18",
    "@types/through2": "^2.0.34",
    "cheerio": "^1.0.0-rc.3",
    "color": "^3.1.2",
    "through2": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.5",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.0.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">= 10"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
